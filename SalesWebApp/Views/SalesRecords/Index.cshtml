
@{
    ViewData["Title"] = "Sales Records";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <form class="form-control" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div>
                    <label for="minDate" class="col-lg-2">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div>
                    <label for="maxDate" class="col-lg-2">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div>
                    <div class="col-lg-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <form class="form-control" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div>
                    <label for="minDate" class="col-lg-2">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div>
                    <label for="maxDate" class="col-lg-2">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div>
                    <div class="col-lg-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
